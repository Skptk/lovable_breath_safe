# .yaml-lint
extends: default

rules:
  # Disable rules that conflict with GitHub Actions
  unrecognized-named-value: disable
  line-length: disable
  indentation: disable
  trailing-spaces: disable
  empty-lines: disable
  comments-indentation: disable

  # Allow GitHub Actions specific patterns
  no-trailing-spaces: disable
  no-empty-lines: disable

# Define valid contexts for GitHub Actions
contexts:
  - secrets
  - github
  - env
  - vars
  - runner
  - matrix
  - needs
  - inputs
  - steps
  - jobs
  - context
  - event
  - workflow

# Allow GitHub Actions expressions
expressions:
  - '${{ }}'
  - '${{ secrets.* }}'
  - '${{ github.* }}'
  - '${{ env.* }}'
  - '${{ vars.* }}'
  - '${{ runner.* }}'
  - '${{ matrix.* }}'
  - '${{ needs.* }}'
  - '${{ inputs.* }}'
  - '${{ steps.* }}'
  - '${{ jobs.* }}'
  - '${{ context.* }}'
  - '${{ event.* }}'
  - '${{ workflow.* }}'

# Patterns for workflow files
patterns:
  - '**/.github/workflows/*.yml'
  - '**/.github/workflows/*.yaml'
